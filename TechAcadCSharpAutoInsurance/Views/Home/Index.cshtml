@model TechAcadCSharpAutoInsurance.Models.Quote

@{
    ViewBag.Title = "Get a FREE quote";
}


    <div class="row mx-auto">
        <p>Get started on your FREE quote by entering the following information!</p>
    </div>
    @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
    {
    
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @required = "true" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.EmailAddress, "Email Address", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "true" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.DateOfBirth, "Date of Birth", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "true" } })
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.CarYear, "Car Year", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.CarYear, new { htmlAttributes = new { @class = "form-control", @required = "true", @type="number", @min="1950", @placeholder="1970" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.CarMake, "Car Make", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.CarMake, new { htmlAttributes = new { @class = "form-control", @required = "true" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.CarModel, "Car Model", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.CarModel, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.DUI, "DUI Conviction?", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.DUI, new { htmlAttributes = new { @class = "form-control", @type="checkbox" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.Tickets, "Number of speeding tickets?", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Tickets, new { htmlAttributes = new { @class = "form-control", @required = "true", @type = "number", @min="0" } })        
    </div>
    <div class="row mx-auto form-group">
        @Html.LabelFor(model => model.FullCoverage, "Full coverage or liability?", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.FullCoverage, new { htmlAttributes = new { @class = "form-control", @type = "checkbox" } })        
    </div>
    <div class="row mx-auto form-group">
        <button type="submit" class = "control-label col-md-2">Get a Quote</button>
    </div>
    
    }
            
